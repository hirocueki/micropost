%header.navbar.navbar-fixed-top
  .container
    = link_to "Home", root_path, id: 'logo'
    %nav.nav.navbar-nav.navbar-right
      %ul
      - if user_signed_in?
        %li.badge.badge-info= "ログイン中 : #{current_user.email}"
        %li= link_to '投稿する', new_user_item_path(current_user), class: "btn"
        %li= link_to 'ログイン情報の編集', edit_user_registration_path, class: "btn"
        %li= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn"
      - else
        %li= link_to 'ユーザー登録', new_user_registration_path, class: "btn btn-outline-success"
        %li= link_to 'ログイン', new_user_session_path, class: "btn btn-link"